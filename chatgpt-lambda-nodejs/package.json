{
  "name": "chatgpt-lambda-nodejs",
  "version": "1.0.0",
  "description": "NodeJS version of ChatGPT Lambda application",
  "main": "lambda.js",
  "scripts": {
    "start": "node local-server.js",
    "dev": "nodemon local-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "serverless offline",
    "logs": "serverless logs -f api -t"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "google-auth-library": "^8.7.0",
    "googleapis": "^146.0.0",
    "helmet": "^6.1.5",
    "node-cache": "^5.1.2",
    "openai": "^3.2.1",
    "serverless-http": "^3.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "serverless-offline": "^12.0.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
